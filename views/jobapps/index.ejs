<%- include('../partials/header') %>

<div class="container">
    <table class="table mt-3">
        <thead class="text-center">
            <th>Company</th>
            <th>Job Title</th>
            <th>Location</th>
            <th>Details</th>
        </thead>
        <tbody>
            <% if (jobApps.length) { %>
            <% jobApps.forEach(app => { %>
            <tr>
                <td> <%= app.company %> </td>
                <td> <%= app.jobTitle %> </td>
                <td> <%= app.location %> </td>
                <td> <a href="/jobapps/<%= app._id %>">Details</a></td>
            </tr>
            <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">
                        No Job Applications Yet.
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>